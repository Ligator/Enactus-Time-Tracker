<div class="text-right">
  <%= link_to "Nueva Actividad", new_activity_path, class: "btn btn-primary" %>
</div>

<% if current_user.leader? %>
  <%= render partial: "table_activities_for_project", locals: { activities: @activities.values.first, project: @projects.first } %>
<% end %>

<% if current_user.admin? %>
  <% @activities.each do |project_id, activities| %>
    <br>
    <%= render partial: "table_activities_for_project", locals: { activities: activities, project: (@projects.find(project_id) if project_id) } %>
  <% end %>
<% end %>

<br>
