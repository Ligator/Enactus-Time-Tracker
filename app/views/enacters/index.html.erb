<h2>Enacters</h2>

<% if @edit_mode %>
  <%= form_tag url_for(:controller => 'enacters', :action => 'update_positions'), :method => 'put' do %>
    <%= link_to "Cancelar", enacters_path, class: "btn btn-default", style: "float:right" %>
    <%= submit_tag "Guardar cambios", data: { disable_with: "Guardando cambios..." }, class: "btn btn-primary", style: "float:right" %> &nbsp;&nbsp;

    <%= render partial: "table_all_enacters_edit", locals: { all_enacters: @enacters + @free_enacters } %>

  <% end %>

<% else %>
  <%= link_to "Editar asignaciones", enacters_path(mode: "edit"), class: "btn btn-default", style: "float:right" %>
  <%= render partial: "table_all_enacters_show", locals: { all_enacters: @enacters + @free_enacters } %>

  <br><br><%= link_to "Invitar enacters", invite_enacters_path, class: "btn btn-primary", style: "float:right" %>
  <% if @users_invited.any? %>
    <%= render partial: "table_invited_enacters_show", locals: { invited_enacters: @users_invited } %>
  <% end %>
<% end %>
