<% 
  format_xls "table.enacters_hours" do
    workbook use_autowidth: true
    format "th", b: true # bold
    format "tbody tr", bg_color: lambda { |row| "eeeeee" if row.index.even? }
    format "tbody tr.table-header", bg_color: lambda { |row| "dddddd" if row.index.even? }, b: true
    format column: 0, width: 50
    format column: 1, width: 15
  end
%>

<% @projects.each do |project| %>
  <%= render partial: "table_enacters", locals: { project: project }, formats: [:html] %> <br>
<% end %>
