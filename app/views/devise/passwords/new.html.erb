<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div class="well">
      <legend><h2>¿Olvidaste tu contraseña?</h2></legend>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
        <div class="row">
          <div class="text-right">
            <%= f.submit "Recuperar contraseña", class: "btn btn-primary" %>
            <%= link_to "Cancelar", new_session_path(resource_name), class: "btn btn-default" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
